{% extends 'base.html.twig' %}

{% block title %}Compte utilisateur
{% endblock %}

{% block body %}
	<main style="background-color: rgb(199, 199, 199);">
		<div class="parent container min-vh-100">
			<div class="row">
				<div class="col col-lg col-md col-sm mt-5 mb-5 text-center">
					<div class="tab-content dashboard_content">
						<div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
							<div class="card">
								<div class="card-header">
									<h3>Bonjour
										{{ app.user.nomUser | upper }}
										{{ app.user.prenomUser | upper}}</h3>
								</div>
							</div>
						</div>
					</div>
					<div class="card" id="account-detail" role="tabpanel" aria-labelledby="account-detail-tab">
						<div class="card">
							<div class="card-header">
								<h3>Voici le détail de votre compte</h3>
							</div>
							<div class="card-body">
								<h3 class="mb-5">
									<b>Mes informations</b>
								</h3>
								<div class="row">
									<div class="form-group col-md-12 mb-3">
										<label>Prénom :
										</label>
										{{ app.user.prenomUser }}
									</div>
									<div class="form-group col-md-12 mb-3">
										<label>Nom
										</label>
										{{ app.user.nomUser }}
									</div>
									<div class="form-group col-md-12 mb-3">
										<label>Pseudo :
										</label>
										{{ app.user.pseudo }}
									</div>
									<div class="form-group col-md-12 mb-3">
										<label>Adresse mail :
										</label>
										{{ app.user.email }}
									</div>
									<div class="form-group col-md-12 mb-3">
										<label>Adresse Postale :
										</label>
										{{ app.user.adresse }},
										{{ app.user.codePostal}}
										{{app.user.ville}}
									</div>
								</div>
							</div>
						</div>
					</div>
					<hr>
					<a href="{{ path('app_modif_compte')}}" class="btn btn-danger btn-sm">
						<i class="fas fa-address-card mr-2"></i>Modifier compte
					</a>
				</div>
			</div>
		</main>
	{% endblock %}
